<div class="row">
    <h3 class="text-center">Administración de Productos</h3>
</div> 
<div class="row">
    <form action="" id="formProds" enctype="application/json">
        <div class="form-group">
            <label for="Producto">Producto</label>
            <input type="text" autocomplete="false" class="form-control" id="nombre" name="nombre" placeholder="Nombre Producto">
        </div>
        <div class="form-group">
            <label for="Descripcion">Descripción</label>
            <input type="text" autocomplete="false" class="form-control" id="descripcion" name="descripcion" placeholder="Descripcion Producto">
        </div>
        <div class="form-group">
            <label for="Codigo">Código</label>
            <input type="text" autocomplete="false" class="form-control" id="codigo" name="codigo" placeholder="Codigo Producto">
        </div>        
        <div class="form-group">
            <label for="Foto">Foto</label>
            <input type="text" autocomplete="false" class="form-control" id="foto" name="foto" placeholder="Url Foto">
        </div>
        <div class="form-group">
            <label for="Precio">Precio</label>
            <input type="number" autocomplete="false" class="form-control" id="precio" name="precio" placeholder="0000">
        </div>
        <div class="form-group">
            <label for="Stock">Stock</label>
            <input type="number" autocomplete="false" class="form-control" id="stock" name="stock" placeholder="0000">
        </div>
        <div class="text-center" style="margin-top: 2%;">
            <button id="bttSaveProds" class="btn btn-primary">Guardar</button>
        </div>
        
    </form>
</div> 
<div class="row">
    <div class="table-responsive">
        <table id="tblProds" class="table table-striped">
            <thead>
                <th class="col-md-4">Producto</th>
                <th class="col-md-4">Precio</th>
                <th class="col-md-4">Foto</th>
            </thead>
            <tbody>
                {{#each ListaProductos}}
                    <tr>
                    <td class="middtext col-md-4">{{this.nombre}}</td>
                    <td class="middtext col-md-4">{{this.precio}}</td>
                    <td class="middtext col-md-4"><img class="imgTbl img-fluid img-thumbnail" src="{{this.foto}}"></td>
                    </<tr>
                {{else}}
                    <tr>
                    <td colspan="3">No hay productos</td>            
                    </<tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>