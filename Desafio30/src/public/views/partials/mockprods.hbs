<div class="row">
    <h3 class="text-center">Mock de Productos</h3>
</div>
<div class="row">
    <div class="table-responsive">
        <table id="tblProds" class="table table-striped">
            <thead>
                <th class="col-md-4">Nombre</th>
                <th class="col-md-4">Precio</th>
                <th class="col-md-4">Foto</th>
            </thead>
            <tbody>
                {{#each ListaProductos}}
                    <tr>
                    <td class="middtext col-md-4">{{this.nombre}}</td>
                    <td class="middtext col-md-4">{{this.precio}}</td>
                    <td class="middtext col-md-4"><img class="imgTbl img-fluid img-thumbnail" src="{{this.foto}}"></td>
                    </<tr>
                {{else}}
                    <tr>
                    <td colspan="3">No hay productos</td>            
                    </<tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>