<div class="row">
    <h3 class="text-center">Centro de Mensajes</h3>
    <div class="form-group mrgBtt">
        <input type="text" autocomplete="false" class="form-control" id="correo" name="correo" placeholder="correo@dominio.com">
    </div>
    <hr/>
</div> 
<div class="row">
    <div id="chatBox" name="chatBox" class="mrgBtt">
        <ul id="ListChatMsg">
            {{#each ListaMensajesChat}}
                <li><span class="correoChat">{{this.mail}}</span><span class="timeChat">[{{this.time}}]: </span><span class="msjChat">{{this.message}}</span></li>
            {{/each}}
        </ul>
            
    </div>
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="msg" name="msg" placeholder="Ingresa un Mensaje">
        <button class="btn btn-outline-primary" type="button" id="bttSendMsg">Enviar</button>
    </div>
</div>