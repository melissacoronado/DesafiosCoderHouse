                    });*/
                }else{
                    alert("Debe ingrear un correo para enviar mensajes.");
                }
            }else{
                alert("Debe ingrear un mensaje para enviar.");
            }
        });

        socket.on('new message', (data) => {           
            $("#ListChatMsg").append($('<li>')
                                     .append($('<span>')
                                             .addClass('correoChat')
                                             .text(`${data.mail} `)
                                     )
                                     .append($('<span>')
                                             .addClass('timeChat')
                                             .text(`[${data.time}]: `)
                                     )
                                     .append($('<span>')
                                             .addClass('msjChat')
                                             .text(data.message)
                                     )
                                     
                                )
                $('#msg, #correo').val("")
            });

