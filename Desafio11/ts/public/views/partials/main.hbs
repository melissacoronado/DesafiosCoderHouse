<div class="row">
    <h3 class="text-center">Listado de Productos</h3>
</div> 
<div class="table-responsive">
    <div class="row">
        <a class="linkDerecha" href='/api/productos/vistaAddProducto'>Agregar Producto [+]</a>
    </div>
    <table class="table table-striped">
        <thead>
            <th class="col-md-4">Producto</th>
            <th class="col-md-4">Precio</th>
            <th class="col-md-4">Foto</th>
        </thead>
        <tbody>
            {{#each ListaProductos}}
                <tr>
                <td class="middtext col-md-4">{{this.title}}</td>
                <td class="middtext col-md-4">{{this.price}}</td>
                <td class="middtext col-md-4"><img class="imgTbl img-fluid img-thumbnail" src="{{this.thumbnail}}"></td>
                </<tr>
            {{else}}
                <tr>
                <td colspan="3">No hay productos</td>            
                </<tr>
            {{/each}}
        </tbody>
    </table>
</div>